<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    

    <ScrollView
        android:id="@+id/stub_othertype"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="@color/bind_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/view_10dp"
        android:paddingRight="@dimen/view_10dp"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/fileType"
                android:layout_width="@dimen/view_60dp"
                android:layout_height="@dimen/view_60dp"
                android:background="@drawable/bxfile_file_txt" />

            <TextView
                android:id="@+id/fileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_10dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/fileSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_10dp"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/text_12sp" />

            <Button
                android:id="@+id/fileOpBtn"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/view_40dp"
                android:layout_marginLeft="@dimen/view_20dp"
                android:layout_marginRight="@dimen/view_20dp"
                android:layout_marginTop="@dimen/view_26dp"
                android:background="@drawable/corner_btn_bg"
                android:text="@string/openWithOtherApp"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>